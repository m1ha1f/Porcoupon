<div class = "container dealdetails round">
	<%= image_tag(@deal.image_url) %>
	<h1><%= @deal.title %></h1>
	<p><%= @deal.text %></p>
	<table>	
		<tr>
			<td>More details</td>
			<td>
				<%= form_tag(deal_path + "?id=#{@deal.id}&is_redirect=true", :method => "post") do %>
				  <%= submit_tag "Click" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>Price</td>
			<td><%= @deal.formatted_price %>
		</tr>
		<tr>
			<td>Views</td>
			<td><%= @deal.views %></td>
		</tr>
		<tr>
			<td>Redirects</td>
			<td><%= @deal.redirects %></td>
		</tr>
		<tr>
			<td>Expires on</td>
			<td><%= @deal.end_at.to_s %></td>
		</tr>
	</table>
</div>


<div class="comments">
	<h2>Comments</h1>
	<% if signed_in? %>
		<%= form_tag(comments_path + "?coupon_id=#{@deal.id}", :method => "post", :remote => true) do |f| %>
			<%= text_field_tag :text %>
			<%= submit_tag "Add comment", :class => "formbutton" %>
		<% end %>
	<% end %>
	<% if @comments.empty? %>
		<p>No comments</p>
	<% else %>
		<% @comments.each do |comment| %>
			<div class="comment">
				<p><%= comment.text %></p>
			</div>
		<% end %>
	<% end %>
<% if !@related_coupons.empty? then %>
	<div class = "container dealdetails round">
		You might also be interested in
		<div class="container round userdetail actions">
			<% @related_coupons.each do |c| %>
					<p><%= link_to( c.title, deal_path(:id => c.id) ) %></p></br>
			<% end %>
		</div>
	</div>
<% end %>